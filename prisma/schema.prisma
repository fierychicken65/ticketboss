generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  eventId        String        @id
  name           String
  totalSeats     Int
  availableSeats Int
  version        Int
  reservations   Reservation[]
}

model Reservation {
  reservationId String   @id @default(cuid())
  eventId       String
  partnerId     String
  seats         Int
  status        String
  createdAt     DateTime @default(now())

  event Event @relation(fields: [eventId], references: [eventId])
}
